<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Launcher">

    <ImageView
        android:id="@+id/imageview_launcher"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@color/material_blue_grey_950"/>

    <LinearLayout
        android:id="@+id/layout_signup_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_launcher"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Log In"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_weight="1"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_signupfacebook"
        android:layout_below="@+id/layout_signup_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="Sign up with Facebook"
        android:textSize="16dp" />

</RelativeLayout>
